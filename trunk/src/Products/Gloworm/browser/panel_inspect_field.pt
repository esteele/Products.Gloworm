<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en-US" lang="en-US"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="gloworm">
    <body>
        <table>
            <h4 i18n:translate="archetypes_field">Archetypes Field "<tal:block tal:content="options/fieldName" i18n:name="options_field_name" />"</h4>
            <tr tal:condition="options/type">
                <th i18n:translate="type">Type:</th>
                <td tal:content="options/type" />
            </tr>
            <tr tal:condition="options/widget">
                <th i18n:translate="widget">Widget:</th>
                <td tal:content="options/widget" />
            </tr>
            <tr tal:condition="options/accessor">
                <th i18n:translate="accessor">Accessor:</th>
                <td tal:content="options/accessor" />
            </tr>
            <tr tal:condition="options/mutator">
                <th i18n:translate="mutator">Mutator:</th>
                <td tal:content="options/mutator" />
            </tr>
            <tr tal:condition="options/readPermission">
                <th i18n:translate="read_permission">Read Permission:</th>
                <td tal:content="options/readPermission" />
            </tr>
            <tr tal:condition="options/writePermission">
                <th i18n:translate="write_permission">Write Permission:</th>
                <td tal:content="options/writePermission" />
            </tr>
        </table>
    </body>
</html>